@model TMDT.Models.Resquest.LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<h2>Đăng nhập</h2>

<form asp-action="Login" asp-controller="Account" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.TextBoxFor(m => m.Username, new { id = "Username", @class = "form-control", required = "required", placeholder = "Tài khoản" })
        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.PasswordFor(m => m.Password, new { id = "Password", @class = "form-control", required = "required", placeholder = "Mật khẩu" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>

    <div>
        <a asp-action="Forgot" asp-controller="Account">Quên mật khẩu?</a>
    </div>

    <div>
        <button type="submit" class="btn btn-primary">Đăng nhập</button>
    </div>

    <div>
        <a asp-action="Register" asp-controller="Account">Bạn chưa có tài khoản? Đăng ký ngay</a>
    </div>

    @* Hiển thị thông báo lỗi nếu có *@
    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
    {
        <p style="color: red;">@ViewData["ErrorMessage"]</p>
    }
</form>
