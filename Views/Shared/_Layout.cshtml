<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thương mại điện tử</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/modernizr-2.8.3.min.js"></script>
    <style>
        .header-nav {
            display: flex;
            align-items: center;
            background-color: #343a40;
            padding: 10px;
            color: white;
        }

        .header-nav .left, .header-nav .center, .header-nav .right {
            display: flex;
            align-items: center;
        }

        .header-nav .left {
            flex: 2;
            justify-content: space-between;
        }

        .header-nav .left .navbar-brand {
            margin-right: 20px;
        }

        .header-nav .left .nav-link {
            color: white;
            margin-right: 10px;
        }

        .header-nav .left .nav-link.active {
            color: #ffcc00; /* Thay đổi màu cho nút đang hoạt động */
        }

        .header-nav .center {
            flex: 5;
            justify-content: center;
        }

        .header-nav .center .search-box input {
            width: 100%;
            padding: 5px;
            border: none;
            border-radius: 4px;
        }

        .header-nav .right {
            flex: 2;
            justify-content: flex-end;
        }

        .header-nav .right img {
            margin-left: 10px;
            cursor: pointer;
        }

        footer {
            background-color: #343a40;
            color: white;
            padding: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <nav class="header-nav">
        <div class="left">
            <a asp-controller="User" asp-action="Index" class="navbar-brand">Logo</a>
            <a asp-controller="User" asp-action="Index" class="nav-link @(ViewData["ActivePage"] == "Index" ? "active" : "")">Trang chủ</a>
            <a asp-controller="User" asp-action="About" class="nav-link">Về chúng tôi</a>
        </div>
        <div class="center">
            <div class="search-box">
                <input type="text" placeholder="Tìm kiếm..." />
            </div>
        </div>
        <div class="right">
            <a asp-controller="Account" asp-action="Cart"><img src="~/images/cart-icon.png" alt="Giỏ hàng" /></a>
            <a asp-controller="Account" asp-action="Index"><img src="~/images/user-icon.png" alt="Người dùng" /></a>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Thông tin nền tảng</p>
        </footer>
    </div>

    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
